{
  "info": {
    "name": "Password Reset - Forgot Password Flow",
    "description": "Test forgot password and reset password endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Forgot Password - Request Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/forgot-password",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "auth",
            "forgot-password"
          ]
        },
        "description": "Request password reset email. Replace 'student' with actual username/email in your database."
      },
      "response": []
    },
    {
      "name": "2. Reset Password - Submit New Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"PASTE_TOKEN_FROM_EMAIL_OR_LOGS_HERE\",\n  \"newPassword\": \"NewPassword123!\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/reset-password",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "auth",
            "reset-password"
          ]
        },
        "description": "Reset password using token. Get token from:\n1. Email (if SMTP configured)\n2. Backend logs (look for 'Password reset token created: token=...')"
      },
      "response": []
    },
    {
      "name": "3. Login with New Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"student\",\n  \"password\": \"NewPassword123!\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/users/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "users",
            "login"
          ]
        },
        "description": "Test login with new password after reset"
      },
      "response": []
    }
  ]
}

